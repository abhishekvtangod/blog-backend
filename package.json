{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "yarn dev",
    "watch": [
      "server/*",
      "public/*"
    ]
  },
  "scripts": {
    "start": "yarn prod",
    "build": "yarn clean && yarn transpile",
    "server": "node ./transpiled-server/bin/www.js",
    "dev": "NODE_ENV=development yarn build && yarn server",
    "prod": "NODE_ENV=production yarn build && yarn server",
    "transpile": "babel ./server --out-dir transpiled-server",
    "clean": "rimraf transpiled-server",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "jest": "^27.0.5",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
